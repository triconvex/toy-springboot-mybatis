<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.zingoworks.springbootmybatis.board.BoardMapper">
    <insert id="create" parameterType="io.zingoworks.springbootmybatis.board.Board" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO BOARD
        (TITLE,
         CONTENT)
        VALUES (#{title},
                #{content})
    </insert>

    <select id="findById" parameterType="java.lang.Long" resultType="io.zingoworks.springbootmybatis.board.Board">
        SELECT *
        FROM BOARD
        WHERE id = #{id}
    </select>

    <update id="update" parameterType="io.zingoworks.springbootmybatis.board.Board">
        UPDATE
            BOARD
        SET title   = #{title},
            content = #{content}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE
        FROM BOARD
        WHERE id = #{id}
    </delete>

</mapper>